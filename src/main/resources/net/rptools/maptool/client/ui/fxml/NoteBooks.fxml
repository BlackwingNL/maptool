<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="620.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.rptools.maptool.client.ui.notebook.NoteBooksController">
   <left>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <ScrollPane>
               <content>
                  <Accordion fx:id="noteBookAccordion" />
               </content>
            </ScrollPane>
         </center>
         <bottom>
            <VBox>
               <children>
                  <HBox>
                     <children>
                        <Button fx:id="newDirectoryButton" mnemonicParsing="false" text="%noteBooks.button.newDirectory" HBox.hgrow="NEVER" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="newNoteButton" mnemonicParsing="false" text="%noteBooks.button.newNote" HBox.hgrow="NEVER" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Button fx:id="importNoteBookButton" mnemonicParsing="false" text="%noteBooks.button.import" HBox.hgrow="NEVER" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="newNoteBookButton" mnemonicParsing="false" text="%noteBooks.button.new" HBox.hgrow="NEVER" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </left>
   <center>
      <AnchorPane fx:id="contentsPane" prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
